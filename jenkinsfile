pipeline {
    agent any
    stages {
        stage("Build"){
            steps{
                sh "docker-compose up --build"
            }
        }
        stage('Deploy'){
            steps{
                sh "echo \$(grep 'version:' pubspec.yaml | awk '{print \$2}' | awk -F '+' '{print \$1}') \$(date) > versions.txt"
                sh "scp ./apks/app-armeabi-v7a-release.apk wms1_windows:\\\\Handheld\\\\cicd_test"
                
            }
        }
    }
}  